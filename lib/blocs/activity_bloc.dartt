// События
abstract class ActivityEvent {}

class ActivityStarted extends ActivityEvent {
  final int activityId;
  ActivityStarted(this.activityId);
}

class ActivityStopped extends ActivityEvent {
  final int activityId;
  ActivityStopped(this.activityId);
}

class UpdateTimer extends ActivityEvent {}

// Состояния
abstract class ActivityState {}

class ActivitiesUpdated extends ActivityState {
  final List<ActivityData> activities;
  ActivitiesUpdated(this.activities);
}
